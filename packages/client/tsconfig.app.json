{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"types": ["vitest/globals"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
